<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h3><%= @user.name %></h3>
    <h4><%= @user.tagline %></h4>
    <h4><%= @user.email %></h4>

    <div class="row">
      <div class="col-md-12 information-card">
        <h2>User is publically sharing these files:</h2>
      </div>
    </div>
    <% if @file_uploads.count < 1 %>
      <div class="row">
        <div class="col-md-10 col-md-offset-1 information-card">
          <h5>User has publically shared no files!</h5>
        </div>
      </div>
    <% end %>
    <% @file_uploads.each do |f| %>
      <div class="row">
        <div class="col-md-10 col-md-offset-1 information-card">
          <h5>Name: <%= f.name %></h5>
          <h5>Description: <%= f.description %></h5>
          <h5><%= link_to "download", f.file.url %></h5>
        </div>
      </div>
    <% end %>
    <% if @user == current_user %>
      <div class="row">
        <div class="col-md-12 information-card">
          <%= link_to "View all my files, public and private", file_uploads_path(current_user) %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 information-card">
          <%= link_to "Upload more files", new_file_upload_path(current_user) %>
        </div>
      </div>
      <%= link_to 'Edit my profile', edit_user_registration_path %> |
      <%= link_to 'Back', :back %>
    <% end %>
  </div>
</div>