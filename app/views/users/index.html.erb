<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="row">
      <div class="col-md-12 information-card">
        <h1>Listing users</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 information-card">
        <% @users.each do |f| %>
          <%= link_to user_path(f) do %>
            <div class="row">
              <div class="col-md-12">
                <span><%= f.name %></span> | 
                <span><%= f.tagline %></span> | 
                <span><%= f.email %></span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 information-card">
        <h2><%= link_to "Back to home", root_path %></h2>
      </div>
    </div>
  </div>
</div>